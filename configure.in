AC_INIT(main.c)
AC_CONFIG_AUX_DIR(buildtools)
AM_CONFIG_HEADER(config.h:config.in)
DBMAIL_MSG_CONFIGURE_START
AM_INIT_AUTOMAKE(dbmail, 2.1)
AM_MAINTAINER_MODE

pgsqlheaderpaths="/usr/include/pgsql /usr/include /usr/local/include/pgsql \
                  /usr/local/include /usr/freeware/include/pgsql \
                  /usr/freeware/include $HOME/include $HOME/pgsql/include \
		  /usr/local/pgsql/include /usr/include/postgresql $HOME"

ldapheaderpaths="/usr/include /usr/local/include"
sieveheaderpaths="/usr/include /usr/local/include"

AC_DEFINE(_GNU_SOURCE,'','Defined GNU SOURCE')

DBMAIL_BOTH_SQL_CHECK
DBMAIL_CHECK_SQL_LIBS
DBMAIL_AUTH_CONF
DBMAIL_CHECK_LDAP_LIBS
DBMAIL_SIEVE_CONF
DBMAIL_CHECK_SIEVE_LIBS
DBMAIL_CHECK_GLIB
DBMAIL_CHECK_GMIME
DBMAIL_SET_INIPARSER
DBMAIL_CHECK_GC

DBMAIL_PATH_CHECK
AM_CONDITIONAL(WITHCHECK, [test -n "$CHECK_LIBS"])

AC_PROG_CC
AC_COMPILE_WARNINGS
AC_C_CONST
AC_C_INLINE
AM_CONDITIONAL(MYSQL, [test -n "$MYSQLINC"])
AM_CONDITIONAL(PGSQL, [test -n "$PGSQLINC"])
AM_CONDITIONAL(SQLITE, [test -n "$SQLITEINC"])
AM_CONDITIONAL(SIEVE, [test -n "$SIEVEINC"])
AM_CONDITIONAL(LDAP, [test -n "$LDAPINC"])
AC_C_BIGENDIAN
AC_CHECK_HEADERS(endian.h)
AC_CHECK_HEADERS(crypt.h)

AC_SUBST(MYSQLLIB)
AC_SUBST(MYSQLALIB)
AC_SUBST(MYSQLLTLIB)

AC_SUBST(PGSQLLIB)
AC_SUBST(PGSQLALIB)
AC_SUBST(PGSQLLTLIB)

AC_SUBST(SQLITELIB)
AC_SUBST(SQLITELALIB)
AC_SUBST(SQLITELTLIB)

AC_SUBST(SORTLIB)
AC_SUBST(SORTALIB)
AC_SUBST(SORTLTLIB)

AC_SUBST(AUTHALIB)
AC_SUBST(AUTHLTLIB)

AC_SUBST(INIPARSERALIB)
AC_SUBST(INIPARSERLTLIB)

AC_SUBST(MYSQLINC)
AC_SUBST(PGSQLINC)
AC_SUBST(SQLITEINC)

AC_SUBST(SIEVEINC)

AC_SUBST(LDAPLIB)
AC_SUBST(LDAPINC)

# libtool patch
AC_PROG_LIBTOOL

AC_OUTPUT(Makefile modules/Makefile sort/Makefile man/Makefile 
	lib/Makefile lib/iniparser-2.14/Makefile lib/iniparser-2.14/src/Makefile)

